pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the application'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Running security scan'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application'
            }
        }
    }

post {
always {
         subject: "Build ",
         body: "test body",
         to: 'ajaypanand007@gmail.com',
         attachLog: true,
    }
}
}
