pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the application'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Running security scan'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application'
            }
        }
    }

    post {
    always {
        emailext(
            subject: "Jenkins Build Notification: ${env.JOB_NAME} #${env.BUILD_NUMBER} - ${currentBuild.currentResult}",
            body: """\
<html>
  <body>
    <h2>Jenkins Build Report</h2>
    <p><strong>Project:</strong> ${env.JOB_NAME}</p>
    <p><strong>Build Number:</strong> ${env.BUILD_NUMBER}</p>
    <p><strong>Status:</strong> <b style="color:${currentBuild.currentResult == 'SUCCESS' ? 'green' : 'red'}">${currentBuild.currentResult}</b></p>
    <p><strong>Duration:</strong> ${currentBuild.durationString}</p>
    <p><strong>Triggered by:</strong> ${currentBuild.getBuildCauses()[0]?.shortDescription ?: 'N/A'}</p>
    <p><strong>Build URL:</strong> <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
    
    <hr>
    <p>This is an automated message from Jenkins CI/CD pipeline.</p>
    <p>For more information, please check the attached build log or visit the Jenkins job link above.</p>
  </body>
</html>
""",
            mimeType: 'text/html',
            to: "ajaypanand007@gmail.com",
            attachLog: true
        )
    }
}

}
