pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the application'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Running security scan'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application'
            }
        }
    }

post {
    always {
        script {
            try {
                emailext(
                    subject: "Build ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: "See console output: ${env.BUILD_URL}",
                    to: 'ajaypanand007@gmail.com',
                    attachLog: true
                )
            } catch (Exception e) {
                echo "Email sending failed: ${e.getMessage()}"
            }
        }
    }
}
}
